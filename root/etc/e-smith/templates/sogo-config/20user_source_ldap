{
    #
    # 20user_source_ldap
    #

    #
    # TODO add LDAP filter on accountStatus attribute:
    #     "(&(mail=*)(accountStatus=active))"

    push @sogoUserSources, 
        qq(
	    type = ldap;
	    CNFieldName = cn;
	    IDFieldName = uid;
	    UIDFieldName = uid;
	    baseDN = "ou=People,dc=directory,dc=nh";
	    bindAsCurrentUser = YES;
	    canAuthenticate = YES;
	    
	    displayName = "Users";
	    hostname = ldapi://;
	    id = users;
	    isAddressBook = YES;
    );
    
    '';
}