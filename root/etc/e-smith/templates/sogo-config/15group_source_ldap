{
    #
    # 15group_source_ldap
    #

    # WARNING: the order of the elements in @sogoUserSources is
    # fundamental for sharing calendars and addressbooks. Refs #2808
    unshift @sogoUserSources,
        qq(
        id = groups;
        type = ldap;
        CNFieldName = cn;
        IDFieldName = cn;
        UIDFieldName = cn;
        canAuthenticate = YES;
        bindDN = "cn=sogo,dc=directory,dc=nh";
        bindPassword = "$ldapPassword";
        baseDN = "ou=Groups,dc=directory,dc=nh";
        hostname = ldapi://;
        scope = ONE;
        displayName = "$SystemName groups";
        isAddressBook = NO;
    );

    '';
}
