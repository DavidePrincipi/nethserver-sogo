{
    #
    # 15group_source_ldap
    #

    push @sogoUserSources, 
        qq(
        id = groups;
        type = ldap;
        CNFieldName = cn;
        IDFieldName = cn;
        UIDFieldName = cn;
        canAuthenticate = YES;
        bindDN = "cn=sogo,dc=directory,dc=nh";
        bindPassword = "$ldapPassword";
        baseDN = "ou=Groups,dc=directory,dc=nh";
        hostname = ldapi://;
        scope = ONE;
        displayName = "$SystemName groups";
        isAddressBook = YES;
    );

    '';
}
