

  /* 10 Database configuration (mysql)  */
{
    ### is going to move to action/init script
    use NethServer::Password;
    my $mysqlPassword = NethServer::Password::store('sogo');
    ###    
        use URI::Escape;
        my $connString = 'mysql://sogo:' . (uri_escape($mysqlPassword) || 'sogo')  . '@localhost/sogo';

    $OUT .= "    SOGoProfileURL = \"$connString/sogo_user_profile\";\n";
    $OUT .= "    OCSFolderInfoURL = \"$connString/sogo_folder_info\";\n";
    $OUT .= "    OCSSessionsFolderURL = \"$connString/sogo_sessions_folder\";\n";
}